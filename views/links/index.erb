
 <%= styled_flash %>

 <ul>
   <% @links.each do |link| %>
     <li id="link-<%= link.id %>">
       <a href="<%= link.url %>" target="_blank">
         <%= link.title %>
       </a>
       <form action="/links/<%= link.id %>/delete" method="post">
         <input type="submit" value="Delete" />
       </form>
     </li>
   <% end %>
 </ul>
